<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaeuc.smartufpa.AboutActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logos"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_margin="10dp"
            android:id="@+id/logo_ufpa_about"
            android:src="@drawable/ic_ufpa"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:layout_margin="10dp"
            android:id="@+id/logo_labvis"
            android:src="@drawable/ic_labvis"
            android:layout_toRightOf="@+id/logo_ufpa_about"
            android:layout_toEndOf="@+id/logo_ufpa_about"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/logos"
        android:layout_toRightOf="@+id/logos"
        android:layout_centerVertical="true"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_coordenadores"
            android:textSize="28sp"
            android:text="Coordenadores do projeto:"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ana"
            android:textSize="26sp"
            android:layout_below="@+id/txt_coordenadores"
            android:text="Ana Régia de Mendonça Neves"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bianchi"
            android:textSize="26sp"
            android:layout_below="@+id/txt_ana"
            android:text="Bianchi Serique Meiguins"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_desenvolvedores"
            android:textSize="28sp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/txt_bianchi"
            android:text="Desenvolvedores:"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_francisco"
            android:textSize="26sp"
            android:layout_below="@+id/txt_desenvolvedores"
            android:text="Francisco Carrera Júnior"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_kae"
            android:textSize="26sp"
            android:layout_below="@+id/txt_francisco"
            android:text="Kaê Uchôa Sarmanho"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nomeapp"
            android:textSize="26sp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/txt_kae"
            android:text="Smart UFPA Versão 1.0"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_labvis"
            android:textSize="26sp"
            android:layout_below="@+id/txt_nomeapp"
            android:text="Laboratório de Visualização (LABVIS)"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ufpa"
            android:textSize="26sp"
            android:layout_below="@+id/txt_labvis"
            android:text="Universidade Federal do Pará"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</RelativeLayout>
