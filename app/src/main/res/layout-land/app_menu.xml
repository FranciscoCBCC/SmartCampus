<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:id="@+id/layout_left">

        <Button
            android:id="@+id/btn_mobilidade"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_mobility"
            android:layout_centerHorizontal="true"
            android:theme="@style/RaisedButton"
            />

        <Button
            android:id="@+id/btn_oportunidades"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_oportunities"
            android:theme="@style/RaisedButtonDisabled"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_mobilidade"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_seguranca"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_safety"
            android:theme="@style/RaisedButtonDisabled"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_oportunidades"
            android:enabled="false"
            />



    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout_left"
        android:layout_toLeftOf="@+id/layout_right"
        android:layout_toStartOf="@+id/layout_right"
        android:layout_toEndOf="@+id/layout_left"
        android:src="@drawable/ic_logo_completo"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/layout_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/btn_alimentacao"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_alimentation"
            android:theme="@style/RaisedButtonDisabled"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_eventos"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_events"
            android:theme="@style/RaisedButtonDisabled"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_alimentacao"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_acessibilidade"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/btn_accessibility"
            android:theme="@style/RaisedButtonDisabled"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_eventos"
            android:enabled="false"
            />



    </RelativeLayout>
</RelativeLayout>
