<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_about_place"
    android:orientation="horizontal"
    android:visibility="gone"
    android:padding="16dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/img_place_holder"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_placeName"
            android:textStyle="bold"
            android:text="Nome"
            android:textSize="16sp"
            android:textAllCaps="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_placeDescription"
            android:text="Descrição: \nLorem ipsum dolor sit amet,
                    consectetur adipiscing elit. Nunc dui tellus, lacinia non ipsum vel,
                    interdum varius nulla. Curabitur ultrices ipsum at porta placerat. "
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>
