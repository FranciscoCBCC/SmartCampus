<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:orientation="horizontal"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        android:src="@drawable/img_place_holder"
        android:layout_gravity="center_vertical"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_txt_place_name"
            android:text="Nome"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryText"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_fragment_local_name"
            android:id="@+id/list_txt_place_loc_name"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_below="@+id/list_txt_place_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_place_description"
            android:id="@+id/list_txt_description_label"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_below="@+id/list_txt_place_loc_name"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:id="@+id/list_txt_place_description"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/list_txt_description_label"
            android:maxLength="120"
            />
        >
    </RelativeLayout>
</LinearLayout>
