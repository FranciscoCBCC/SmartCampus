<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddLibraryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:text="Nova Biblioteca"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/input_lib_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_library_name"
        android:inputType="text"
        android:maxLength="40"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_operation_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_lib_openingtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_building_operation_hours_from"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_lib_closingtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_building_operation_hours_to"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusable="false"
                />


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_lib_building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_search_building"
            android:inputType="text"
            android:maxLength="40"/>

    </android.support.design.widget.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_lib_cancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            android:theme="@style/RaisedButton" />

        <Button
            android:id="@+id/btn_lib_confirm"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Confirmar"
            android:theme="@style/RaisedButton" />
    </LinearLayout>


</LinearLayout>